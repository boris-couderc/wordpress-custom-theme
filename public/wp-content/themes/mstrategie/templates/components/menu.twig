{% if menu %}
<div class="menu js-menu">
	<button class="menu-mobile-toggle js-menu-mobile-toggle" aria-label="Menu"><span
			class="menu-mobile-toggle_tr"></span></button>
	<ul class="menu_items">
		{% for item in items %}
		<li class="{{ item.classes | join(' ') }}">
			<a href="{{ item.link }}">
				{{ item.title }}
			</a>
		</li>
		{% endfor %}
	</ul>
</div>
{% endif %}