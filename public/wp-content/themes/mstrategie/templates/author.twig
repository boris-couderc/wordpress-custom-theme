{% extends "layouts/base.twig" %}

{% block content %}
<div class="o-container">
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content">
			<div class="article-body">
				{% for post in posts %}
				{% include ["tease-"~post.post_type~".twig", "tease.twig"] %}
				{% endfor %}
			</div>
		</section>
	</article>
</div><!-- /o-container -->
{% endblock %}