{% extends "layouts/base.twig" %}

{% block content %}
<div class="o-container">
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

		<section class="article-content">
			<h1 class="article-h1 u-margin-bottom-1">{{ post.title }}</h1>

			<p class="u-text-lighter u-margin-bottom-3">
				<time datetime="{{ post.date|date('d F Y') }}">{{ post.date|date('d F Y') }}</time>
			</p>

			<div class="article-body">
				{{post.content}}
			</div>

			<div class="u-margin-top-3">
				<a href="{{site.url}}/blog" class="c-button -outline">
					Voir tous les articles
				</a>
			</div>
		</section>

	</article>
</div><!-- /o-container -->
{% endblock %}